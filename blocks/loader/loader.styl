nb-loader()

  .nb-loader
    position: relative

    display: inline-block

    // Fixes missing subpixel-antialiasing bug
    overflow: hidden
    -webkit-transform: translate(0,0)

  .nb-loader__spinner
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0

    opacity: 0.4

    background: url('loader_32.svg')
    background-size: 100% 100%

    animation: spin 1s infinite linear

  @import "_size"
  @import "_color"

  @keyframes spin
    0%
      transform: rotate(0deg)
    100%
      transform: rotate(360deg)

nb-loader()
