.nb-checkbox
  kind: block inline
  skin: para no-margin

  cursor: pointer

  &_type_button
    .nb-checkbox__input
      &:checked + .nb-checkbox__label
        skin: button_checked
      &:focus + .nb-checkbox__label
        skin: button_focus

if !ie
  .nb-checkbox__input
    kind: hidden visually

  .nb-checkbox__flag_type_radio
    kind: icon
    skin: radio (-icon '& > .nb-checkbox__flag__icon')

  .nb-checkbox__flag_type_checkbox
    kind: icon
    skin: checkbox (-icon '& > .nb-checkbox__flag__icon')

  .nb-checkbox__input:checked + .nb-checkbox__flag
    skin: button_checked

  .nb-checkbox__input:focus + .nb-checkbox__flag
    skin: button_focus

.nb-checkbox_size_s,
.nb-checkbox_size_s .nb-checkbox__flag
  skin: para2 no-margin
