nb-arrow()

  .nb-arrow
    vertical-align: top
    position: relative
    margin-right: $gapS

  .nb-arrow_service
    display: inline-block

  .nb-arrow__top
  .nb-arrow__bottom
    position: absolute
    left: 0px
    width: 100%

  .nb-arrow__content
    position: relative
    z-index: 3
    padding: 5px

  .nb-arrow__top
  .nb-arrow__bottom
  .nb-arrow__content
    background: linear-gradient(to right top, #FFDB4C 0, #FC0 100%)

  .nb-arrow__top
    transform: skew(30deg, 0deg)
    transform-origin: 0 0
    height: 50%
    top: 0

  .nb-arrow__bottom
    transform: skew(-30deg, 0deg)
    transform-origin: 0 100%
    height: 50%
    bottom: 0

  .nb-arrow_service
    .nb-arrow__top
    .nb-arrow__bottom
    .nb-arrow__content
      background: #FFDB4C

  ._link.nb-arrow__service__name
    display: inline-block
    line-height: 32px
    padding: 0px 9px
    font-size: 18px
    color: #000
    white-space: nowrap

  .nb-arrow__input__wrap
    overflow: hidden
    position: relative

  .nb-arrow__button
    float: right
    margin: 0px 10px 0px 6px

  .nb-arrow__name__wrap
    float: left
    box-sizing: border-box
    position: relative

  ._link.nb-arrow__name
    border-right: 1px solid rgba(0,0,0,.08)
    background: linear-gradient(bottom, rgba(0,0,0,.02) 0, rgba(255,225,120,.1) 100%)
    line-height: 32px
    padding: 0 12px
    font-size: 16px
    color: #000
    display: inline-block
    position: relative
    z-index: 1

  .nb-arrow__name__wrap:before
    background: #c4c4c4
    background: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.4))
    content: ""
    position: absolute
    bottom: 0
    right: 0
    left: 0
    top: 0

  .nb-arrow__name__wrap:after
    background: #fff
    bottom: 1px
    content: ""
    left: 1px
    position: absolute
    right: 0
    top: 1px

  .nb-arrow__name__wrap + .nb-arrow__input__wrap
    .nb-arrow__input:after
      left: 0

  .nb-arrow__name__wrap_focus
    box-shadow: inset 0 1px 5px rgba($foreground, 0.25), 0 1px 1px 0 rgba($background, 0.2), 0 0 6px 2px rgba(255, 204, 0, 0.7)

  .nb-arrow__name__wrap_focus:after
    box-shadow: inset 0 1px 0 rgba($foreground, 0.1), 0 0 0 1px rgba(193, 154, 0, 0.2)

  .nb-arrow__name__wrap_focus:before
    display: none

  .nb-arrow__input
  .nb-arrow__input .nb-input__input
    width: 100%
    display: block

  .nb-arrow__requests__wrap
    position: absolute
    top: 5px

  .nb-arrow__requests
    color: #BBB
    z-index: 1
    font-size: 13px
    line-height: 32px
    white-space: nowrap
    display: inline-block

  .nb-arrow__input_fake
    padding: 0 8px
    font-size: 16px
    line-height: 32px
    visibility: hidden



